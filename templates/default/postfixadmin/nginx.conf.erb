server {
  listen <%= @insecure_port %>;
  server_name <%= @server_name %>;

  location / {
    return 301 https://$server_name$request_uri;
  }
}

server {
  listen <%= @secure_port %> ssl http2;
  server_name <%= @server_name %>;

  charset utf-8;

  <% if @scts %>
  ssl_ct on;
  <% end %>

  ssl_certificate <%= @ssl_rsa_certificate %>;
  ssl_certificate_key <%= @ssl_rsa_certificate_key %>;
  <% if @scts %>
  ssl_ct_static_scts <%= @scts_rsa_directory %>;
  <% end %>

  <% if !@ssl_ec_certificate.nil? && !@ssl_ec_certificate_key.nil? && !@scts_ec_directory.nil? %>
  ssl_certificate <%= @ssl_ec_certificate %>;
  ssl_certificate_key <%= @ssl_ec_certificate_key %>;
  <% if @scts %>
  ssl_ct_static_scts <%= @scts_ec_directory %>;
  <% end %>
  <% end %>

  <% if @hsts %>
  add_header Strict-Transport-Security "max-age=<%= @hsts_max_age %>" always;
  <% end %>
  add_header X-Frame-Options DENY;
  add_header Content-Security-Policy "default-src 'none'; style-src 'self'; script-src 'unsafe-inline'; img-src 'self';";

  <% if @oscp_stapling %>
  ssl_stapling on;
  ssl_stapling_verify on;
  resolver 8.8.8.8 8.8.4.4 valid=300s;
  resolver_timeout 5s;
  <% end %>

  <% if @hpkp && @hpkp_pins.size > 0 %>
  add_header Public-Key-Pins '<%= @hpkp_pins.map{ |pin| "pin-sha256=\"#{pin}\"" }.join '; ' %>; max-age=<%= @hpkp_max_age %>;' always;
  <% end %>

  access_log <%= node['nginx']['log_dir'] %>/<%= @name %>-access.log combined;
  error_log  <%= node['nginx']['log_dir'] %>/<%= @name %>-error.log;

  # Path to the root of your installation
  root <%= @docroot %>;

  fastcgi_buffers 64 4K;
  fastcgi_connect_timeout 60;
  fastcgi_send_timeout 180;
  fastcgi_read_timeout 360;

  index index.php;

  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

  location ~ ^/(data|config|\.ht|db_structure\.xml|README) {
    deny all;
  }

  <% if @disable_setup_page %>
  location ~ ^(/setup\.php) {
    deny all;
  }
  <% end %>

  location ~ ^(.+?\.php)(/.*)?$ {
    try_files $1 = 404;

    include fastcgi_params;
    fastcgi_param SCRIPT_FILENAME $document_root$1;
    fastcgi_param PATH_INFO $2;
    fastcgi_pass <%= @fastcgi_pass %>;
  }

  # Optional: set long EXPIRES header on static assets
  location ~* ^.+\.(jpg|jpeg|gif|bmp|ico|png|css|js|swf)$ {
    expires 30d;
    # Optional: Don't log access to assets
    access_log off;
  }
}
